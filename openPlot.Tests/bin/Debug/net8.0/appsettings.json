{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Auth": {
    "UserStorePath": "users.json", // caminho relativo ao content root
    "SessionKey": "openplot:user" // chave da sessão
  },
  "Session": {
    "IdleTimeoutMinutes": 60,
    "CookieName": ".openplot.sid",
    "CookieSecurePolicy": "Always", // Always|None (dev http) — ajuste conforme ambiente
    "CookieSameSite": "None" // None p/ frontend em domínio diferente (https)
  },
  "Configs": {
    "XmlDirectory": "configs/xml"
  },



  "AllowedHosts": "*"
}
